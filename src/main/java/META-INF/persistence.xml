<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       version="3.0"
       xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
       https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <persistence-unit name="Examen" transaction-type="RESOURCE_LOCAL">

    <class>modelo.Subject</class>
    
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistema_cursos_db"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="mysql"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>